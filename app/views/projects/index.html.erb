<h1 class="center">List of Projects</h1>
<%= form_tag projects_path, method: "get" do %>
    <%= text_field_tag :query %>
    <%= submit_tag :search, class: "btn blue-grey lighten-1" %>
  <% end %>
  
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Genre</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.title, project_path(project) %></td>
        <td><%= project.genre %></td>
        <td><%= link_to "Edit", edit_project_path(project) %></td>
        <td><%= link_to "Delete", project_path(project), method: "delete" %></td>
      </tr>
    <% end %>
  </table>