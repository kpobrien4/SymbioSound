<ul>
    <%if !@project.errors.empty? %>
      <%@project.errors.full_messages.each do |msg|%>
         <li class="red-text"><%= msg %></li>
        <%end%>
      <%end%>
</ul>
<%= form_for [user, project] do |f| %>
<%= f.hidden_field :user_id, value: user.id %>
    <div class="input-field">
      <%= f.text_field :title %>
      <%= f.label :title %>
    </div>

    <div class="input-field">
      <%= f.text_field :genre %>
      <%= f.label :genre %>
    </div>

    <div class="input-field">
        <%= f.text_field :contact %>
        <%= f.label :contact %>
     </div>

  
    <div class="input-field">
      <%= f.text_area :info, class: "materialize-textarea" %>
      <%= f.label :info %>
    </div>
  
    <%= f.submit button_name, class: "btn blue-grey lighten-1" %>



  <% end %>