<h3>Create a Project</h3>
<%= form_for @project do |f| %>
    <div class="input-field">
      <%= f.text_field :title %>
      <%= f.label :title %>
    </div>

    <div class="input-field">
      <%= f.text_field :genre %>
      <%= f.label :genre %>
    </div>

    <div class="input-field">
        <%= f.text_field :contact %>
        <%= f.label :contact %>
     </div>
  
    <div class="input-field">
      <%= f.text_area :info, class: "materialize-textarea" %>
      <%= f.label :info %>
    </div>

  
    <%= f.submit "Submit", class: "btn blue-grey lighten-1" %>
  <% end %>
